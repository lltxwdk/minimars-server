{
  "name": "minimars-server",
  "version": "0.11.1",
  "description": "MINI MARS server apis.",
  "scripts": {
    "dev": "ts-node-dev --no-notify --respawn --transpileOnly src/index.ts",
    "start": "ts-node src",
    "test": "echo \"No test specified.\" && exit 0",
    "build": "tsc && cp -r src/resource build/",
    "lint": "eslint ./src/*.ts ./src/*/*.ts ./src/*/*/*.ts"
